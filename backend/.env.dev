# Development environment variables for local testing (copy to .env)

ENVIRONMENT=development
APP_VERSION=0.1.0

# Logging
LOG_LEVEL=DEBUG
LOG_REQUEST_BODY=true
LOG_RESPONSE_BODY=false

# Redis (optional in dev; in-memory fallback will be used if not available)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=60

# Database (sqlite by default for local development)
DATABASE_URL=sqlite:///./db/dev.db

# Auth / cookies (use simple dev secret locally)
SECRET_KEY=dev-secret
ACCESS_TOKEN_EXPIRE_MINUTES=1440
TENANT_COOKIE_SECURE=false

# Rate limiting (use lower limits for functional tests, in-memory fallback used)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=600

# Security headers (you can keep defaults; dev CSP may be relaxed to allow local assets)
CSP_POLICY="default-src 'self' 'unsafe-inline' 'unsafe-eval'"
HSTS_MAX_AGE=0
