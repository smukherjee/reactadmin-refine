# Production environment variables (copy to .env or export in your deployment environment)
# - Replace placeholders (PASSWORDS, HOSTNAMES, SECRET_KEY) with real values in your secret manager.

ENVIRONMENT=production
APP_VERSION=1.0.0

# Logging
LOG_LEVEL=INFO
LOG_REQUEST_BODY=false
LOG_RESPONSE_BODY=false

# Redis (used for cache + production rate limiter)
REDIS_URL=redis://:redis-password@redis.prod.example.com:6379/0
CACHE_TTL=300

# Database
DATABASE_URL=postgresql://dbuser:dbpassword@db.prod.example.com:5432/appdb

# Auth / cookies
SECRET_KEY=REPLACE_WITH_STRONG_RANDOM_SECRET
ACCESS_TOKEN_EXPIRE_MINUTES=1440
TENANT_COOKIE_SECURE=true

# Rate limiting (production: enable distributed limiter using Redis)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Security headers
# Tune CSP to match your front-end resources
CSP_POLICY="default-src 'self'; script-src 'self' cdn.example.com; connect-src 'self' api.example.com; img-src 'self' data:;"
HSTS_MAX_AGE=31536000

# Optional: Sentry or other DSNs (leave empty if unused)
SENTRY_DSN=
